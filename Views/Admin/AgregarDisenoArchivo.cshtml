@{
    Layout = "_LayoutAdmin";
}
@using System.Data;

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #4B92DB;
        --primary-hover-color: #3a7cc0;
        --background-color: #f0f2f5;
        --container-bg-color: #ffffff;
        --text-color: #495057;
        --font-family: 'Poppins', sans-serif;
    }

    body {
        background-color: var(--background-color);
        font-family: var(--font-family);
        color: var(--text-color);
    }

    .container {
        max-width: 800px;
        margin-top: 50px;
        margin-bottom: 50px;
        background-color: var(--container-bg-color);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 30px;
        text-align: center;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        margin-top: 20px;
        width: 100%;
        font-weight: 600;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: var(--primary-hover-color);
    }

    /* Alerta flotante */
    .confirm-alert {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .confirm-box {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        max-width: 500px;
        width: 90%;
        text-align: center;
    }

    .confirm-buttons {
        margin-top: 20px;
        display: flex;
        justify-content: space-around;
    }
</style>

<div class="container">
    <h1>Agregar Nuevo Diseño</h1>

    @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <form id="formAgregarDiseno" enctype="multipart/form-data">
        @* <div class="mb-4">
            <label for="nombre" class="form-label">Nombre del Diseño</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ej: Taza de Gato" required>
        </div> *@

        <div class="mb-4">
            <label class="form-label">Video del Diseño</label>
            <input class="form-control" type="file" name="archivo" accept="video/*" required>
        </div>

        <button type="submit" class="btn btn-primary">Analizar Diseño</button>
        <div id="progressContainer" style="display:none;">
        <p>Subiendo video, por favor espera...</p>
        <div class="progress">
            <div id="progressBar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0"
                aria-valuemin="0" aria-valuemax="100">0%</div>
        </div>
    </div>

    <div id="resultadoAlerta">
    </div>

    </form>
</div>

<!-- Alerta flotante -->
<div class="confirm-alert" id="confirmAlert">
    <div class="confirm-box">
        <div id="alertContent"></div>
        <div class="confirm-buttons">
            <button class="btn btn-secondary" onclick="cerrarAlerta()">Cancelar</button>
            <form id="formAgregarDiseno" action="@Url.Action("GuardarDisenoConfirmado", "Admin")" method="post"
                enctype="multipart/form-data">
                <button type="submit" class="btn btn-primary">Guardar Diseño</button>
            </form>
        </div>
    </div>
</div>

<script>
    const form = document.getElementById("formAgregarDiseno");
    const alertDiv = document.getElementById("confirmAlert");
    const alertContent = document.getElementById("alertContent");

    form.addEventListener("submit", async function (e) {
        e.preventDefault();

        const formData = new FormData(form);

        const response = await fetch('@Url.Action("AgregarDisenoArchivo", "Admin")', {
            method: 'POST',
            body: formData
        });

        const html = await response.text();
        alertContent.innerHTML = html; // Inserta el HTML generado por Razor
        alertDiv.style.display = "flex";
    });

    function cerrarAlerta() {
        alertDiv.style.display = "none";
        alertContent.innerHTML = "";
    }

    async function confirmarEnvio() {
        cerrarAlerta();

        const formData = new FormData(document.getElementById("formAgregarDiseno"));

        const response = await fetch('@Url.Action("GuardarDisenoConfirmado", "Admin")', {
            method: "POST",
            body: formData
        });

        const result = await response.json();
        if (result.redirectUrl) {
            window.location.href = result.redirectUrl;
        } else {
            alert("❌ Error: " + (result.error || "No se pudo guardar."));
        }
    }

    $(document).ready(function () {
    $("#uploadForm").on('submit', function (e) {
        e.preventDefault(); // Evita que el formulario se envíe de la forma tradicional

        var formData = new FormData(this);
        var $progressBar = $("#progressBar");
        var $progressContainer = $("#progressContainer");
        var $resultadoAlerta = $("#resultadoAlerta");

        // Validar que se seleccionó un archivo (opcional, pero recomendado)
        if ($('#archivoInput').get(0).files.length === 0) {
            $resultadoAlerta.html("<div class='alert alert-danger'>Debes seleccionar un archivo.</div>");
            return;
        }

        // Mostrar el progreso y limpiar resultados anteriores
        $progressContainer.show();
        $progressBar.width('0%').attr('aria-valuenow', 0).text('0%');
        $resultadoAlerta.html(''); // Limpia alertas previas

        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: formData,
            processData: false, // Importante para FormData
            contentType: false, // Importante para FormData
            
            // --- ¡Aquí está la magia del progreso! ---
            xhr: function () {
                var xhr = new window.XMLHttpRequest();
                xhr.upload.addEventListener("progress", function (evt) {
                    if (evt.lengthComputable) {
                        var percentComplete = Math.round((evt.loaded / evt.total) * 100);
                        $progressBar.width(percentComplete + '%')
                                    .attr('aria-valuenow', percentComplete)
                                    .text(percentComplete + '%');
                    }
                }, false);
                return xhr;
            },
            // --- Fin de la magia ---

            success: function (response) {
                // 'response' es el HTML de tu _AlertaDiseno
                // El 100% se muestra aquí para asegurar que termine
                $progressBar.width('100%').attr('aria-valuenow', 100).text('100% - Procesando...');
                $resultadoAlerta.html(response);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                // Manejar errores del servidor
                $resultadoAlerta.html("<div class='alert alert-danger'>Error al subir el archivo: " + errorThrown + "</div>");
            },
            complete: function () {
                // Ocultar la barra de progreso después de un momento
                setTimeout(function() {
                    $progressContainer.hide();
                }, 3000); // Oculta después de 3 segundos
            }
        });
    });
});

</script>