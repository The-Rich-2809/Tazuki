@{
    Layout = "_LayoutAdmin";
}
@using System.Data;

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #4B92DB;
        --primary-hover-color: #3a7cc0;
        --background-color: #f0f2f5;
        --container-bg-color: #ffffff;
        --text-color: #495057;
        --font-family: 'Poppins', sans-serif;
    }

    body {
        background-color: var(--background-color);
        font-family: var(--font-family);
        color: var(--text-color);
    }

    .container {
        max-width: 800px;
        margin-top: 50px;
        margin-bottom: 50px;
        background-color: var(--container-bg-color);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 30px;
        text-align: center;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        margin-top: 20px;
        width: 100%;
        font-weight: 600;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: var(--primary-hover-color);
    }

    /* Alerta flotante */
    .confirm-alert {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .confirm-box {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        max-width: 500px;
        width: 90%;
        text-align: center;
    }

    .confirm-buttons {
        margin-top: 20px;
        display: flex;
        justify-content: space-around;
    }
</style>

<div class="container">
    <h1>Agregar Nuevo Diseño</h1>

    <form id="formAgregarDiseno" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="nombre" class="form-label">Nombre del Diseño</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ej: Taza de Gato" required>
        </div>

        <div class="mb-4">
            <label class="form-label">Video del Diseño</label>
            <input class="form-control" type="file" name="archivo" accept="video/*" required>
        </div>

        <button type="submit" class="btn btn-primary">Analizar Diseño</button>
    </form>
</div>

<!-- Alerta flotante -->
<div class="confirm-alert" id="confirmAlert">
    <div class="confirm-box">
        <div id="alertContent"></div>
        <div class="confirm-buttons">
            <button class="btn btn-secondary" onclick="cerrarAlerta()">Cancelar</button>
            <button class="btn btn-primary" onclick="confirmarEnvio()">Confirmar</button>
        </div>
    </div>
</div>

<script>
    const form = document.getElementById("formAgregarDiseno");
    const alertDiv = document.getElementById("confirmAlert");
    const alertContent = document.getElementById("alertContent");

    form.addEventListener("submit", async function (e) {
        e.preventDefault();

        const formData = new FormData(form);

        const response = await fetch('@Url.Action("AgregarDisenoArchivo", "Admin")', {
            method: 'POST',
            body: formData
        });

        const html = await response.text();
        alertContent.innerHTML = html; // Inserta el HTML generado por Razor
        alertDiv.style.display = "flex";
    });

    function cerrarAlerta() {
        alertDiv.style.display = "none";
        alertContent.innerHTML = "";
    }

    async function confirmarEnvio() {
        cerrarAlerta(); // Cierra la alerta visual

        const formData = new FormData(document.getElementById("formAgregarDiseno"));

        try {
            const response = await fetch('@Url.Action("GuardarDisenoConfirmado", "Admin")', {
                method: "POST",
                body: formData
            });

            if (response.ok) {
                const result = await response.text();
                console.log(result);
                // Redirige a una vista (por ejemplo, Index del AdminController)
                window.location.href = '/Admin';
            } else {
                alert("❌ Error al guardar el diseño.");
            }

        } catch (error) {
            console.error(error);
            alert("⚠️ Error de conexión con el servidor.");
        }
    }
</script>