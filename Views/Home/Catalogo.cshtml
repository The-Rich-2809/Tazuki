@using System.Data
<!-- CATÁLOGO SOLO TAZAS -->
<section id="catalogo" class="py-5">
    <div class="container">
        <div class="row">

            <!-- Filtros a la izquierda -->
            <aside class="col-lg-3 mb-4">
                <div class="p-3 bg-white border rounded-3 shadow-sm sticky-top" style="top:90px">
                    <h5 class="fw-semibold mb-3">Filtros</h5>

                    <!-- Buscar -->
                    <div class="mb-3">
                        <label class="form-label">Buscar</label>
                        <input id="buscador" type="search" class="form-control" placeholder="Ej. superman, goku, chivas…">
                    </div>

                    <!-- Precio -->
                    <div class="mb-3">
                        <label class="form-label">Precio máx: <span id="lblPrecio">$300</span> MXN</label>
                        <input id="rangoPrecio" type="range" class="form-range" min="50" max="1000" step="10" value="300">
                    </div>

                    <!-- Categorías -->
                    <div>
                        <label class="form-label">Categoría</label>
                        <div class="d-flex flex-column gap-2">
                            <div class="category-pill">
                                <input type="radio" id="cat-all" name="cat" value="all" checked>
                                <label class="badge rounded-pill px-3 py-2" for="cat-all">Todas</label>
                            </div>
                            <div class="category-pill">
                                <input type="radio" id="cat-super" name="cat" value="super">
                                <label class="badge rounded-pill px-3 py-2" for="cat-super">Superhéroe</label>
                            </div>
                            <div class="category-pill">
                                <input type="radio" id="cat-anime" name="cat" value="anime">
                                <label class="badge rounded-pill px-3 py-2" for="cat-anime">Anime</label>
                            </div>
                            <div class="category-pill">
                                <input type="radio" id="cat-liga" name="cat" value="liga">
                                <label class="badge rounded-pill px-3 py-2" for="cat-liga">Liga MX</label>
                            </div>
                            <div class="category-pill">
                                <input type="radio" id="cat-otros" name="cat" value="otros">
                                <label class="badge rounded-pill px-3 py-2" for="cat-otros">Otros</label>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Productos a la derecha -->
            <div class="col-lg-9">
                <div id="gridProductos" class="row g-4">

                    <!-- Taza Superhéroe -->
                    <div class="col-12 col-sm-6 col-md-4 producto"
                         data-cat="super"
                         data-precio="199"
                         data-tags="taza superhéroe superman batman marvel dc comics">
                        <div class="card h-100">
                            <video src="~/mp4/Dragon_Ball.mp4" class="card-img-top" alt="Taza de anime" autoplay muted loop playsinline></video>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-1">Taza Superhéroe</h5>
                                <span class="badge badge-price mb-2">Desde $199</span>
                                <p class="card-text text-secondary small mb-3">
                                    Diseños inspirados en tus héroes favoritos de Marvel y DC.
                                </p>

                                <!-- BOTONES -->
                                <div class="mt-auto d-flex flex-column gap-2">
                                    <!-- Botón agregar a carrito -->
                                    <button class="btn btn-outline-secondary w-100 btn-carrito"
                                            data-producto="Taza Superhéroe"
                                            data-precio="199">
                                        <i class="bi bi-cart-plus"></i> Agregar al carrito
                                    </button>

                                    <!-- Botón comprar ahora -->
                                    <button class="btn btn-primary w-100"
                                            data-producto="Taza Superhéroe"
                                            data-precio="199"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalPersonaliza">
                                        <i class="bi bi-bag-check"></i> Comprar ahora
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @foreach (DataRow row_video in ViewBag.Videos.Rows)
                    {
                        <div class="col-12 col-sm-6 col-md-4 producto"
                             data-cat="anime"
                             data-precio="189"
                             data-tags="taza anime goku naruto luffy one piece dragon ball">
                            <div class="card h-100">
                                <video src="@row_video[4]" class="card-img-top" alt="Taza de anime" autoplay muted loop playsinline></video>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title mb-1">Taza Anime</h5>
                                    <span class="badge badge-price mb-2">Desde $189</span>
                                    <p class="card-text text-secondary small mb-3">Perfecta para fans de Dragon Ball, Naruto, One Piece y más.</p>

                                    <div class="mt-auto d-flex flex-column gap-2">
                                        <!-- Botón agregar a carrito -->
                                        <button class="btn btn-outline-secondary w-100 btn-carrito"
                                                data-producto="Taza Superhéroe"
                                                data-precio="199">
                                            <i class="bi bi-cart-plus"></i> Agregar al carrito
                                        </button>

                                        <!-- Botón comprar ahora -->
                                        <button class="btn btn-primary w-100"
                                                data-producto="Taza Superhéroe"
                                                data-precio="199"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalPersonaliza">
                                            <i class="bi bi-bag-check"></i> Comprar ahora
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Taza Anime -->
                    

                    <!-- Taza Liga MX -->
                    <div class="col-12 col-sm-6 col-md-4 producto"
                         data-cat="liga"
                         data-precio="179"
                         data-tags="taza futbol liga mx chivas america cruz azul pumas">
                        <div class="card h-100">
                            <video src="~/mp4/Toluca.mp4" class="card-img-top" alt="Taza de anime" autoplay muted loop playsinline></video>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-1">Taza Liga MX</h5>
                                <span class="badge badge-price mb-2">Desde $179</span>
                                <p class="card-text text-secondary small mb-3">Tazas de tu equipo favorito: Chivas, América, Cruz Azul y más.</p>

                                <div class="mt-auto d-flex flex-column gap-2">
                                    <!-- Botón agregar a carrito -->
                                    <button class="btn btn-outline-secondary w-100 btn-carrito"
                                            data-producto="Taza Superhéroe"
                                            data-precio="199">
                                        <i class="bi bi-cart-plus"></i> Agregar al carrito
                                    </button>

                                    <!-- Botón comprar ahora -->
                                    <button class="btn btn-primary w-100"
                                            data-producto="Taza Superhéroe"
                                            data-precio="199"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalPersonaliza">
                                        <i class="bi bi-bag-check"></i> Comprar ahora
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Taza Otros -->
                    <div class="col-12 col-sm-6 col-md-4 producto"
                         data-cat="otros"
                         data-precio="169"
                         data-tags="taza personalizada frases logos fotos regalo especial">
                        <div class="card h-100">
                            <video src="~/mp4/Amor.mp4" class="card-img-top" alt="Taza de anime" autoplay muted loop playsinline></video>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-1">Taza Personalizada</h5>
                                <span class="badge badge-price mb-2">Desde $169</span>
                                <p class="card-text text-secondary small mb-3">Agrega frases, logos o cualquier diseño especial.</p>

                                <div class="mt-auto d-flex flex-column gap-2">
                                    <!-- Botón agregar a carrito -->
                                    <button class="btn btn-outline-secondary w-100 btn-carrito"
                                            data-producto="Taza Superhéroe"
                                            data-precio="199">
                                        <i class="bi bi-cart-plus"></i> Agregar al carrito
                                    </button>

                                    <!-- Botón comprar ahora -->
                                    <button class="btn btn-primary w-100"
                                            data-producto="Taza Superhéroe"
                                            data-precio="199"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalPersonaliza">
                                        <i class="bi bi-bag-check"></i> Comprar ahora
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- /gridProductos -->
            </div>

        </div>
    </div>
</section>
