@using System.Data
@{
    Layout = "_LayoutVacio";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Biografía</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            /* Fondo degradado atractivo */
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white; /* Color de texto principal */
        }

        .profile-picture {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 4px solid white;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .btn {
            transition: transform 0.2s ease-in-out;
        }

            .btn:hover {
                transform: scale(1.05); /* Efecto de zoom al pasar el mouse */
            }
    </style>
</head>
<body>

    <div class="container text-center d-flex flex-column align-items-center justify-content-center vh-100">

        <!-- CAMBIA ESTO: URL de tu foto de perfil -->
        <img src="https://via.placeholder.com/150" alt="Foto de Perfil" class="profile-picture rounded-circle mb-3">

        <!-- CAMBIA ESTO: Tu nombre o usuario -->
        <h1 class="fw-bold">Tazuki</h1>

        <!-- CAMBIA ESTO: Una breve descripción sobre ti -->
        <p class="lead mb-4">¡Hola! Bienvenido a mi página. Aquí puedes encontrar todos mis enlaces.</p>

        <div class="links-container w-100" style="max-width: 400px;">
            <!-- CAMBIA ESTO: Enlaces a tus redes y sitios web -->
            <a href="https://tazuki.remixfamily.xyz/" class="btn btn-primary btn-lg d-block mb-3 d-flex align-items-center justify-content-center gap-2"><i class="bi bi-globe"></i> Mi Sitio Web</a>
            <a href="https://www.instagram.com/remy_sublimacion/" class="btn btn-danger btn-lg d-block mb-3 d-flex align-items-center justify-content-center gap-2"><i class="bi bi-instagram"></i> Instagram</a>
            <!-- Para WhatsApp, usa el formato https://wa.me/TUNUMEROCONCODIGODEPAIS -->
            <a href="https://wa.me/5215660776770?text=Hola%2C%20quiero%20informaci%C3%B3n%20sobre%20sublimaci%C3%B3n" class="btn btn-success btn-lg d-block mb-3 d-flex align-items-center justify-content-center gap-2"><i class="bi bi-whatsapp"></i> WhatsApp</a>
        </div>

    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
