@using System.Data
@{
    Layout = "_LayoutVacio";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Links | Tazuki</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        /* Paleta basada en 3BBFAD */
        :root {
            --brand: #3BBFAD;
            --brand-dark: #2CA495;
            --brand-light: #A5E6DC;
            --bg: #f0fdfa;
            --text: #0f172a;
            --muted: #475569;
        }

        html, body {
            height: 100%
        }

        body {
            background: linear-gradient(135deg, var(--brand-light), #ffffff);
            color: var(--text);
        }

        /* Card simple */
        .card-simple {
            background: #ffffff;
            border: 2px solid var(--brand-light);
            border-radius: 1rem;
            box-shadow: 0 8px 20px rgba(59,191,173,.25);
        }

        /* Avatar */
        .avatar {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid var(--brand);
            box-shadow: 0 6px 16px rgba(59,191,173,.4);
        }

        /* Botón principal */
        .btn-main {
            background: var(--brand);
            border-color: var(--brand);
            color: #fff;
            font-weight: 600;
        }

            .btn-main:hover {
                background: var(--brand-dark);
                border-color: var(--brand-dark);
                color: #fff;
            }

        /* Botones secundarios */
        .btn-ghost {
            background: transparent;
            border: 2px solid var(--brand-light);
            color: var(--brand-dark);
            font-weight: 500;
        }

            .btn-ghost:hover {
                background: var(--brand-light);
                color: var(--text);
            }

        .muted {
            color: var(--muted);
        }
    </style>
</head>
<body>
    <main class="container d-flex align-items-center justify-content-center min-vh-100 py-5">
        <div class="card-simple p-4 p-md-5 w-100" style="max-width:520px;">

            <div class="text-center">
                <img src="~/img/tazukilogo.jpg" alt="Foto de perfil Tazuky" class="avatar mb-3">
                <h1 class="h4 mb-1" style="color:var(--brand-dark)">Tazuky</h1>
                <p class="muted mb-4">Hub de enlaces — Sublimación & merch</p>
            </div>

            <div class="d-grid gap-3">
                <a href="https://tazuki.remixfamily.xyz/" target="_blank" class="btn btn-main btn-lg d-flex align-items-center justify-content-center gap-2">
                    <i class="bi bi-globe"></i> Mi sitio web
                </a>
                <a href="https://www.instagram.com/tazukysub/" target="_blank" class="btn btn-ghost btn-lg d-flex align-items-center justify-content-center gap-2">
                    <i class="bi bi-instagram"></i> Instagram
                </a>
                <a href="https://wa.me/5215660776770?text=Hola%2C%20quiero%20informaci%C3%B3n%20sobre%20sublimaci%C3%B3n" target="_blank" class="btn btn-ghost btn-lg d-flex align-items-center justify-content-center gap-2">
                    <i class="bi bi-whatsapp"></i> WhatsApp
                </a>
                <!-- Email (Gmail web) -->
                <a href="https://mail.google.com/mail/?view=cm&fs=1&to=tazukysub@gmail.com&su=Consulta%20sobre%20sublimaci%C3%B3n" target="_blank" class="btn btn-ghost btn-lg d-flex align-items-center justify-content-center gap-2">
                    <i class="bi bi-envelope-at"></i> Correo
                </a>
                <!-- Copiar correo -->
                <button id="copyEmail" type="button" class="btn btn-ghost btn-lg d-flex align-items-center justify-content-center gap-2">
                    <i class="bi bi-clipboard-check"></i> Copiar correo
                </button>
            </div>

            <div class="text-center mt-4">
                <small class="muted">© @DateTime.Now.Year Tazuki</small>
            </div>

        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Copiar email
        document.getElementById('copyEmail').addEventListener('click', async () => {
          try {
            await navigator.clipboard.writeText('tazukysub@gmail.com');
            const btn = document.getElementById('copyEmail');
            const original = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check2-circle"></i> ¡Copiado!';
            setTimeout(()=>btn.innerHTML = original, 1500);
          } catch(e) { alert('No se pudo copiar.'); }
        });
    </script>
</body>
</html>