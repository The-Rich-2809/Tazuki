    </div>
</header>

<section id="catalogo" class="pb-5">
    <div class="container">
        <div class="d-flex align-items-end justify-content-between mb-3">
            <div>
                <h2 class="fw-semibold">Catálogo</h2>
                <p class="text-secondary mb-0">Precios orientativos. Personaliza y cotiza al instante por WhatsApp.</p>
            </div>
            <div class="input-group" style="max-width: 320px;">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input id="buscador" type="search" class="form-control" placeholder="Buscar: foto, mágica, pareja…">
            </div>
        </div>
        <div class="row g-4" id="gridProductos">
            @if (ViewBag.Videos != null && ViewBag.Videos.Rows.Count > 0)
            {
                // Creamos una nueva colección ordenada de forma aleatoria Y TOMAMOS SOLO 6
                var randomSixRows = rows.OrderBy(r => Guid.NewGuid()).Take(6);

                foreach (DataRow row_video in randomSixRows)
                {
                    <div class="col-sm-6 col-lg-4 producto" data-tags="taza cerámica blanca 11oz" data-cat="taza" data-precio="@row_video[2]">
                        <div class="card h-100">
                            
                            <div class="video-container">
                                <video class="card-img-bottom" autoplay muted loop playsinline preload="metadata">
                                    <source src="@Url.Content(row_video[5].ToString())" type="video/mp4" />
                                    Tu navegador no soporta video HTML5.
                                </video>
                                <div class="video-overlay">
                                    <i class="bi bi-arrows-fullscreen"></i>
                                </div>
                                </div>
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h5 class="card-title">@row_video[1]</h5>
                                    <span class="badge rounded-pill badge-price">Desde $@row_video[2]</span>
                                </div>
                                <div class="rating mb-2" aria-label="Calificación 5 de 5">
                                    <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                                </div>
                                <div class="mt-auto d-flex gap-2">
                                    <a class="btn btn-primary w-100" href="@Url.Action("Producto", "Home", new { Id = row_video[0] })">Comprar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<section id="personaliza" class="py-5">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <img alt="Personaliza tu diseño" class="img-fluid rounded-4 shadow-soft" src="~/img/taza1.jpg" />
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold">¿Tienes un diseño? <span class="text-primary">Nosotros lo imprimimos</span></h2>
                <p class="text-secondary">Cuéntanos qué necesitas: cantidades, colores, nombres, logotipo, fotografías o
                    frases. Podemos sugerirte opciones de empaque y acabado.</p>
                <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modalPersonaliza"
                    data-producto="Pedido personalizado" data-precio="">Personalizar ahora</button>
            </div>
        </div>
    </div>
</section>

<div id="custom-fullscreen-overlay">
    <video id="custom-fullscreen-video" loop controls controlsList="nodownload"></video>
    <button id="custom-fullscreen-close-btn">&times;</button>
</div>

<style>
    #custom-fullscreen-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #000;
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }
    #custom-fullscreen-overlay.visible {
        display: flex;
    }
    #custom-fullscreen-video {
        max-width: 100%;
        max-height: 100%;
        width: auto;
    }
    #custom-fullscreen-close-btn {
        position: absolute;
        top: 15px;
        right: 25px;
        font-size: 40px;
        font-weight: bold;
        color: white;
        background: transparent;
        border: none;
        cursor: pointer;
        text-shadow: 0 0 5px black;
    }
    .producto video {
        cursor: pointer;
    }

    /* === INICIO CSS AÑADIDO (para Modificación 2) === */
    .video-container {
        position: relative; /* Necesario para posicionar el overlay */
    }

    /* INICIO: CSS MODIFICADO (Posición y tamaño) */
    .video-overlay {
        position: absolute;
        bottom: 10px; /* Posición desde abajo */
        right: 10px; /* MODIFICADO: Posición desde la derecha */
        /* left: 50%; (Eliminado) */
        /* transform: translateX(-50%); (Eliminado) */
        background-color: rgba(0, 0, 0, 0.7); /* Fondo semitransparente */
        color: white;
        padding: 6px 14px; /* MODIFICADO: Un poco más grande */
        border-radius: 20px; /* Bordes redondeados (píldora) */
        font-size: 0.95rem; /* MODIFICADO: Un poco más grande */
        font-weight: 500;
        z-index: 10;
        pointer-events: none; /* MUY IMPORTANTE: deja que el click "atraviese" el texto y llegue al video */
        white-space: nowrap; /* Evita que el texto se parta en dos líneas */
    }
    /* FIN: CSS MODIFICADO */
    /* === FIN CSS AÑADIDO === */

</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const isIphone = /iPhone/i.test(navigator.userAgent);
        if (isIphone) {
            return;
        }

        const originalVideos = document.querySelectorAll('.producto video');
        const overlay = document.getElementById('custom-fullscreen-overlay');
        const overlayVideo = document.getElementById('custom-fullscreen-video');
        const closeBtn = document.getElementById('custom-fullscreen-close-btn');

        function openCustomFullscreen(videoElement) {
            const source = videoElement.querySelector('source').src;
            overlayVideo.src = source;
            overlay.classList.add('visible');
            overlayVideo.muted = false;
            overlayVideo.play();
            // Añadimos una entrada en el historial del navegador
            history.pushState(null, '', '#video');
        }

        function closeCustomFullscreen() {
            overlay.classList.remove('visible');
            overlayVideo.pause();
            overlayVideo.src = "";
        }

        // --- AÑADIMOS LOS EVENTOS ---

        originalVideos.forEach(video => {
            video.addEventListener('click', function (event) {
                event.preventDefault();
                openCustomFullscreen(this);
            });
        });

        // El botón 'X' ahora simplemente simula un clic en "atrás"
        closeBtn.addEventListener('click', () => {
            history.back();
        });

        // La tecla 'Escape' también simula un clic en "atrás"
        document.addEventListener('keydown', function (event) {
            if (event.key === "Escape" && overlay.classList.contains('visible')) {
                history.back();
            }
        });

        // Este es el nuevo evento clave: escucha cuando el usuario presiona "atrás"
        window.addEventListener('popstate', function(event) {
            // Si el evento "atrás" sucede y nuestra capa está visible, la cerramos.
            if (overlay.classList.contains('visible')) {
                closeCustomFullscreen();
            }
        });
    });
</script>