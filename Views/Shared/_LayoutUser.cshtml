@* Views/Shared/_LayoutAdmin.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mis Pedidos</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary">
    <div class="container-fluid px-4">
        
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">
            <img src="~/img/tazukylogo.jpg" 
                 alt="Logo" 
                 class="rounded" 
                 style="height: 40px; width: auto;">
        </a>

        <div class="mx-auto position-absolute start-50 translate-middle-x">
            <span class="navbar-text text-white fs-5 fw-semibold">
                Mis Pedidos
            </span>
        </div>

        <div class="d-flex">
            </div>

    </div>
</nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
