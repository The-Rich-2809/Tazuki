@* Views/Shared/_LayoutAdmin.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Admin" asp-action="Index">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @{
                string ctrl = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                string act  = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
            }

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ctrl=="Admin" && act=="AgregarDiseno" ? "active" : "")"
                           asp-controller="Admin" asp-action="AgregarDiseno">Agregar Diseños</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ctrl=="Admin" && act=="AgregarDisenoArchivo" ? "active" : "")"
                           asp-controller="Admin" asp-action="AgregarDisenoArchivo">Agregar Archivo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ctrl=="Admin" && act=="Etiquetas" ? "active" : "")"
                           asp-controller="Admin" asp-action="Etiquetas">Etiquetas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ctrl=="Admin" && act=="TamanosTaza" ? "active" : "")"
                           asp-controller="Admin" asp-action="TamanosTaza">Tamaños Tazas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ctrl=="Admin" && act=="Usuarios" ? "active" : "")"
                           asp-controller="Admin" asp-action="Usuarios">Usuarios</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(ctrl=="Home" && act=="Index" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">MiSitio</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
